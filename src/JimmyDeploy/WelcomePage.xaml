<Page x:Class="JimmyDeploy.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JimmyDeploy"
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <controls:MetroContentControl>
        <Grid Margin="40">
            <StackPanel>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Text="Welcome to Jimmy Deploy" FontSize="20"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Text="A useful description goes here" Margin="0,10,0,0"/>
                <TextBlock x:Name="ConfigText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Text="Current Config: " Margin="0,10,0,0"/>
                <Button Content="Load Config" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,12,0,0" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </controls:MetroContentControl>
</Page>
